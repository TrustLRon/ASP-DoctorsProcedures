@model WebApplication1.Models.ViewModel

@{
    ViewBag.Title = "Procedure Setup Details";
}

@{
    var doc = Model.Setups.FirstOrDefault().Doctor;
    var glove = Model.Doctors.FirstOrDefault().GloveSize;
    var initials = Model.Doctors.FirstOrDefault().DoctorInitials;
    var gloveType = Model.Doctors.FirstOrDefault().GloveType;
    var traits = Model.Doctors.FirstOrDefault().DoctorComment;
    var proc = Model.Setups.FirstOrDefault().Procedure;
    var otherequipment = Model.Setups.FirstOrDefault().OtherEquipment;
    var comments = Model.Setups.FirstOrDefault().Comments;
}

<div class="jumbotron" style="text-align:center">
    <div class="row">
    <div class="col-xs-6">
        <div class="row">
            <h1>Setup</h1>
            <h3 style="text-align:center">@proc for @doc</h3>
        </div>
    </div>
        <div class="col-xs-6" style="font-size:.75em">
            <div class="row">
                <div class="col-xs-6">
                    <div class="col-xs-12 alert alert-success" style="text-align:left">
                        <p><b>Gloves:</b> @glove @gloveType</p>
                    </div>
                </div>
                <div class="col-xs-6">
                    <div class="col-xs-12 alert alert-info" style="text-align:left">
                        <p><b>Initials:</b> @initials</p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    <div class="col-xs-12 alert alert-danger">
                        <div class="row">
                            <div class="col-xs-4" id="titleMobile">
                                <p><b>Common Traits:</b></p>
                            </div>
                            <div class="col-xs-8" id="titleMobile">
                                <p style="white-space:pre-wrap; text-align:left">@traits</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@foreach (var setup in Model.Setups)
{
    <div class="row">
        <div class="col-xs-3">
            <div class="col-xs-12 alert alert-info">
                <div class="row">
                    <div class="col-xs-12" id="titleMobile">
                        <h4>Scan Details</h4><hr />
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-6" style="text-align:right" id="resultColMobileLeft">
                        <b>Modailty: </b>
                    </div>
                    <div class="col-xs-6" id="resultColMobileRight">
                        @Html.DisplayFor(model => setup.Modality)
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-6" style="text-align:right" id="resultColMobileLeft">
                        <b>Orientation: </b>
                    </div>
                    <div class="col-xs-6" id="resultColMobileRight">
                        @Html.DisplayFor(model => setup.Orientation)
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-6" style="text-align:right" id="resultColMobileLeft">
                        <b>Bilateral: </b>
                    </div>
                    <div class="col-xs-6" id="resultColMobileRight">
                        @Html.DisplayFor(model => setup.Bilateral)
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xs-3">
            <div class="col-xs-12 alert alert-info">
                <div class="row">
                    <div class="col-xs-12" id="titleMobile">
                        <h4>Needles</h4><hr />
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-8" style="text-align:right" id="resultColNeedlesMobileLeft">
